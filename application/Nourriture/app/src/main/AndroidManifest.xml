<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nourriture.app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".setting.PersonalSettingActivity"
            android:label="@string/personal_setting">
            <intent-filter>
                <action android:name="com.nourriture.app.p_setting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".setting.PersonalSettingNameActivity"
            android:label="Change Name">
            <intent-filter>
                <action android:name="com.nourriture.app.setting.name" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".setting.PersonalSettingSexActivity"
                  android:label="Change Sex">
            <intent-filter>
                <action android:name="com.nourriture.app.setting.sex" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".setting.PersonalSettingPasswordActivity"
                  android:label="Change Password">
            <intent-filter>
                <action android:name="com.nourriture.app.setting.password" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
